<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.flyingmemory.beans.system">
	<class name="TblMenuInfo" table="TBL_MENU_INFO">
		<id 
			name="menuId"
			type="string"
			column="MENU_ID"
		>
			<generator class="assigned" />
		</id>
		
		<property name="menuName" column="MENU_NAME" type="string" not-null="true" length="32" />
		<property name="menuDesc" column="MENU_DESC" type="string" not-null="false" length="128" />
		<property name="menuUrl" column="MENU_URL" type="string" not-null="true" length="128" />
		<property name="menuState" column="MENU_STATE" type="string" not-null="true" length="1" />
		<property name="updateTime" column="UPDATE_TIME" type="string" not-null="false" length="14" />
		<property name="updateOpr" column="UPDATE_OPR" type="string" not-null="false" length="20" />
		<property name="createTime" column="CREATE_TIME" type="string" not-null="false" length="14" />
		<property name="createOpr" column="CREATE_OPR" type="string" not-null="false" length="20" />

		<many-to-one name="parent" column="SUPER_MENU_ID" class="TblMenuInfo" />
		<set name="children" cascade="save-update" inverse="true" lazy="false">
			<key column="SUPER_MENU_ID" />
			<one-to-many class="TblMenuInfo"/>
		</set>
	</class>
</hibernate-mapping>
