<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.action.extension" value="do"></constant>
	
	<package name="flyingmemory" extends="json-default">
		<!-- 在这个package里可以共用的结果集,每个action中都可以使用这个result -->
		<global-results>
			<result type="plainText">
				<param name="charSet">UTF-8</param>
				<param name="location">/page/system/emptyLocation.jsp</param>
			</result>
		</global-results>
        
		<action name="CoreAction" class="org.flyingmemory.action.weChat.CoreAction"/>
		<action name="TestAction" class="org.flyingmemory.action.TestAction"/>
		<action name="Game_Idiom_Action" class="org.flyingmemory.action.Game_Idiom_Action"/>
		<action name="MenuAction" class="org.flyingmemory.action.system.MenuAction" >
			<result name="success">/page/system/main.jsp</result>
		</action>
	</package>

</struts>
